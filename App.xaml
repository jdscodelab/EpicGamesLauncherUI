<Application x:Class="EpicGamesLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EpicGamesLauncher"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Colors.xaml"/>
                <ResourceDictionary Source="Style/Fonts.xaml"/>
                <ResourceDictionary Source="Style/IconsStyle.xaml"/>
                <ResourceDictionary Source="Resources/Icons.xaml"/>
                <ResourceDictionary Source="Style/Window.xaml"/>
                <ResourceDictionary Source="Style/ProgressBarStyles.xaml"/>
                <ResourceDictionary Source="Style/ButtonsStyle.xaml"/>
                <ResourceDictionary Source="Style/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="Style/ScrollBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>